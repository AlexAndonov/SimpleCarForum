@using System.Security.Claims
@model IEnumerable<PostDto>

@{
    ViewData["Title"] = "Posts";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Posts</h2>

        @if (User.Identity!.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Create Post
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <h4 class="text-center mt-5">No posts yet!</h4>
    }
    else
    {
        <div class="container mt-4">
            <div class="row">
                @foreach (var post in Model.OrderByDescending(p => p.CreatedOn))
                {
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="card-text text-truncate">@post.Content</p>
                                <small class="text-muted">By @post.AuthorName on @post.CreatedOn.ToString("dd MMM yyyy")</small>
                                <div class="mt-3">
                                    <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary btn-sm w-25 mt-2">View</a>

                                    @if (User!.Identity!.IsAuthenticated &&
                                                                (User.FindFirstValue(ClaimTypes.NameIdentifier) == post.AuthorId))
                                    {
                                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm w-25 mt-2">Edit</a>
                                    }

                                    @if (User.Identity.IsAuthenticated &&
                                                                (User.FindFirstValue(ClaimTypes.NameIdentifier) == post.AuthorId
                                                                || User.IsInRole("Admin")))
                                    {
                                        <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm w-25 mt-2">Delete</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>