@model IEnumerable<PostDto>

@{
    ViewData["Title"] = "Posts";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Posts</h2>

        @if (User.Identity!.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Create Post
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center">
            No posts have been created yet.
        </div>
    }
    else
    {
        <div class="container mt-4">
            <div class="row g-4 mb-4">

                @foreach (var post in Model.OrderByDescending(p => p.CreatedOn))
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0 bg-body-secondary">
                            <div class="card-body d-flex flex-column">

                                <h5 class="card-title">@post.Title</h5>

                                <p class="card-text text-muted flex-grow-1 text-truncate">
                                    @post.Content
                                </p>

                                <small class="text-muted mb-3">
                                    By @post.AuthorName on @post.CreatedOn.ToString("dd MMM yyyy")
                                </small>

                                <a asp-action="Details"
                                   asp-route-id="@post.Id"
                                   class="btn btn-outline-primary w-100 mb-2">
                                    View
                                </a>

                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <div class="d-flex justify-content-between gap-2">

                                        @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == post.AuthorId)
                                        {
                                            <a asp-action="Edit"
                                               asp-route-id="@post.Id"
                                               class="btn btn-sm btn-outline-warning w-50">
                                                Edit
                                            </a>
                                        }

                                        @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == post.AuthorId
                                                                    || User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete"
                                               asp-route-id="@post.Id"
                                               class="btn btn-sm btn-outline-danger w-50">
                                                Delete
                                            </a>
                                        }

                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

    }
</div>