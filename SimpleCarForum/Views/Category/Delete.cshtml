@model CategoryDto

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm border-0" style="max-width: 500px; width: 100%;">
        <div class="card-body p-4">

            <div class="text-center mb-4">
                <i class="bi bi-folder-plus fs-1 text-primary"></i>
                <h3 class="mt-2">Delete Category</h3>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input disabled asp-for="Name"
                           class="form-control"
                           placeholder="e.g. Engines, Tuning, Car Meets" />
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea disabled asp-for="Description"
                              class="form-control"
                              rows="4"
                              placeholder="Short description shown on the category page."></textarea>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="text-decoration-none">
                        ← Back to categories
                    </a>

                    <button type="submit" class="btn btn-danger px-4">
                        Delete
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
